<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="MysqlContext" targetRuntime="MyBatis3" defaultModelType="flat">

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/ssmbuild"
                        userId="root"
                        password="bll308">
        </jdbcConnection>

<!--        指定javabean生成的位置-->
        <javaModelGenerator targetPackage="com.biao.pojo" targetProject=".\src\main\java">
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

<!--        指定sql映射文件生成的位置-->
        <sqlMapGenerator targetPackage="com.biao.dao"  targetProject=".\src\main\java"/>

<!--        指定dao接口生成的位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.biao.dao"  targetProject=".\src\main\java"/>

<!--        table指定每个表的生成策略-->
        <table tableName="emp" domainObjectName="Employee"></table>
        <table tableName="dept" domainObjectName="Department"></table>
    </context>
</generatorConfiguration>